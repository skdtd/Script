<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<DefList>
    <FilterDef stage="Permit" enabled="True" order="699999">
        <DefName>ホワイトリスト</DefName>
        <EnvelopeFrom state="ex" case="False">
            <Value>aaa@xxx.com</Value>
            <Value>bbb@xxx.com</Value>
            <Value>ccc@xxx.com</Value>
        </EnvelopeFrom>
        <Action>
NOOP
            <AddHeader name="＜パラメータ(mailfilter_header_＜プロバイダID＞)の値＞">white</AddHeader>
        </Action>
    </FilterDef>
    <FilterDef stage="Reject" enabled="True" order="599998">
        <DefName>ブラックリスト</DefName>
        <HeaderStrings targetHeader="From" state="ex" case="False">
            <Value>*eee@xxx.com*</Value>
        </HeaderStrings>
        <Action>
REJECT
        </Action>
    </FilterDef>
    <FilterDef stage="Reject" enabled="True" order="599997">
        <DefName>ブラックリスト</DefName>
        <HeaderStrings targetHeader="Subject" state="ex" case="False">
            <Value>*メルマガ*</Value>
        </HeaderStrings>
        <Action>
REJECT
</Action>
    </FilterDef>
    <FilterDef stage="Reject" enabled="True" order="599996">
        <DefName>ブラックリスト</DefName>
        <HeaderStrings targetHeader="envelope-from" state="ex" case="False">
            <Value>*fff@xxx.com</Value>
        </HeaderStrings>
        <Action>
REJECT
</Action>
    </FilterDef>
    <FilterDef stage="Spam" enabled="True" order="399998">
        <DefName>迷惑メールブロック</DefName>
        <HeaderStrings targetHeader="＜パラメータ(spam_header)の値＞" state="ex" case="True">
            <Value>＜パラメータ(spam_header_keyword)の値＞</Value>
        </HeaderStrings>
        <Action>Fileinto
            <SubjectPrefix>[spam]</SubjectPrefix>
            <SaveToFolder>＜パラメータ (spam_folder_name)の値＞</SaveToFolder>
        </Action>
    </FilterDef>
    <FilterDef stage="Reply" enabled="True" order="299999">
        <DefName>自動応答</DefName>
        <HeaderStrings targetHeader="'X-Spam-Status" state="ne" case="True">
            <Value>Yes</Value>
        </HeaderStrings>
        <Action>
REPLY
            <SubjectPrefix>Re:</SubjectPrefix>
            <ResBody>xx月xx日からyy月yy日まで休暇中です。&#x0D;&#x0A;&#x0D;&#x0A;/○○&#x0D;&#x0A;&#x0D;&#x0A;</ResBody>
            <ReplySaveMail>True</ReplySaveMail>
        </Action>
    </FilterDef>
    <FilterDef stage="Forward" enabled="True" order="100000">
        <DefName>メーリングリスト</DefName>
        <Size state="gt">1</Size>
        <Action>
FORWARD
            <AddHeader name="Reply-To">all_leader@xxx.com</AddHeader>
            <AddHeader name="Return-Path">xxxx@xxx.com</AddHeader>
            <FwdEnvelopeFrom>xxxx@xxx.com</FwdEnvelopeFrom>
            <DelAttach>False</DelAttach>
            <FwdFromAddr>Stay</FwdFromAddr>
            <FwdType>All</FwdType>
            <FwdToAddr>aaa@xxx.com</FwdToAddr>
            <FwdToAddr>bbb@xxx.com</FwdToAddr>
            <FwdToAddr>ccc@xxx.com</FwdToAddr>
            <FwdSaveMail>False</FwdSaveMail>
        </Action>
    </FilterDef>
</DefList>