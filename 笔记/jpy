#/bin/bash

case $1 in
"on"){
        nohup jupyter-notebook &>> notebook_log &
        echo "notebook 已启动"
};;

"off"){
        ps -axu | grep "/usr/local/bin/jupyter-notebook" | grep -v "grep" | awk '{print $2}'| xargs kill &> /dev/null
        echo "notebook 已停止"
};;

"re"){
        ps -axu | grep "/usr/local/bin/jupyter-notebook" | grep -v "grep" | awk '{print $2}'| xargs kill &> /dev/null
        nohup jupyter-notebook &>> .notebook_log &
        echo "notebook 已重新启动"
};;
esac